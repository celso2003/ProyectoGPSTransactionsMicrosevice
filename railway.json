{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "DOCKER_IMAGE",
      "image": "ghcr.io/celso2003/proyectogpsinventormicroservice/inventory-microservice:latest"
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "sleepApplication": false,
      "multiRegionConfig": {
        "us-east4-eqdc4a": {
          "numReplicas": 1
        }
      },
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }